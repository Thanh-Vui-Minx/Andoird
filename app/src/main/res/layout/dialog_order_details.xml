<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/surface">

    <TextView
        android:id="@+id/tvOrderIdDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đơn #12345"
        android:textStyle="bold"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/tvOrderDateDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01/01/2025 12:00"
        android:textColor="@color/textSecondary"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvOrderAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: ..."
        android:layout_marginTop="8dp"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/tvOrderPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phương thức: COD"
        android:layout_marginTop="6dp"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/tvOrderBankRef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã tham chiếu: -"
        android:layout_marginTop="4dp"
        android:textColor="@color/textSecondary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mặt hàng:" 
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:textColor="@color/textPrimary" />

    <LinearLayout
        android:id="@+id/containerOrderItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvOrderTotalDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng: 0 VNĐ"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:textColor="@color/primary" />

    <Button
        android:id="@+id/btnCloseOrderDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đóng"
        style="@style/AppButton"
        android:layout_marginTop="12dp" />

</LinearLayout>
