<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/surface"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVoucherCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CODE2025"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvVoucherValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="-30%"
            android:textColor="@color/textSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvVoucherExpiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="đến 2025-12-31"
            android:textColor="@color/textSecondary"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Toggle column -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:padding="4dp">

            <ToggleButton
                android:id="@+id/toggleActive"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOff="OFF"
                android:textOn="ON" />
        </FrameLayout>

        <!-- Edit column -->
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:padding="4dp">

            <Button
                android:id="@+id/btnEditVoucher"
                style="@style/AppButton"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="56dp"
                android:text="Sửa" />
        </FrameLayout>

        <!-- Delete column -->
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:padding="4dp">

            <Button
                android:id="@+id/btnDeleteVoucher"
                style="@style/AppButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="56dp"
                android:text="Xóa" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
