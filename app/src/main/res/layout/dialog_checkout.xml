<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">
    <TextView
        android:id="@+id/tvOrderSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tóm tắt đơn hàng:"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/tvDeliveryAddressDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ hiện tại: Chưa cập nhật"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etRecipientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên người nhận"
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp"
        android:background="@color/surface" />

    <EditText
        android:id="@+id/etRecipientPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại người nhận"
        android:inputType="phone"
        android:layout_marginBottom="12dp"
        android:background="@color/surface" />

    <EditText
        android:id="@+id/etUpdateAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cập nhật địa chỉ giao hàng"
        android:inputType="textPostalAddress"
        android:layout_marginBottom="16dp"
        android:background="@color/surface" />

    <!-- Payment method selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phương thức thanh toán"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="@color/textPrimary" />

    <RadioGroup
        android:id="@+id/rgPaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <RadioButton
            android:id="@+id/rbCOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán khi nhận hàng (COD)" />

        <RadioButton
            android:id="@+id/rbATM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyển khoản qua ATM" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvBankInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngân hàng: ABC Bank\nSố tài khoản: 0123456789\nChủ tài khoản: PETER FOOD"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:textColor="@color/textSecondary" />

    <EditText
        android:id="@+id/etBankRef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã tham chiếu/chú thích chuyển khoản (tùy chọn)"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:background="@color/surface" />

    <!-- Applied voucher display and add voucher button -->
    <TextView
        android:id="@+id/tvAppliedVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginBottom="8dp"
        android:textColor="@color/primary"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnAddVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Voucher"
        style="@style/AppButton"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnConfirmOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác Nhận Đặt Hàng"
        style="@style/AppButton"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủy"
        style="@style/AppButton"
        android:backgroundTint="@color/danger" />

</LinearLayout>