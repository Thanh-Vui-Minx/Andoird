<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/surface">

    <!-- Scrollable content area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFoodImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="Ảnh món ăn"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/tvFoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Tên Món Ăn"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary" />

            <TextView
                android:id="@+id/tvDetailedDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mô tả chi tiết món ăn..."
                android:textSize="16sp"
                android:textColor="@color/textSecondary" />

            <TextView
                android:id="@+id/tvFoodPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Giá: 0 VNĐ"
                android:textColor="@color/primary" />

            <Spinner
                android:id="@+id/spSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:entries="@array/food_sizes" />

            <TextView
                android:id="@+id/tvSelectedPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Giá đã chọn: 0 VNĐ" />

            <!-- Review input: rating + text -->
            <RatingBar
                android:id="@+id/rbReviewRating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:layout_marginTop="12dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Viết đánh giá của bạn..."
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSubmitReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Gửi đánh giá"
                android:visibility="gone"
                style="@style/AppButton" />

            <TextView
                android:id="@+id/tvComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Bình luận:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary" />

            <TextView
                android:id="@+id/tvFoodSalePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Giảm giá: " />

            <TextView
                android:id="@+id/tvFoodRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Đánh giá: 0/5" />

            <LinearLayout
                android:id="@+id/llCommentSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú (không bắt buộc):"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_rounded"
                android:hint="VD: Không cay, ít hành, thêm tương ớt..."
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="3"
                android:padding="12dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Fixed action button bar at the bottom (scrolls horizontally if needed) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="80dp"
                android:text="Thêm"
                android:drawableStart="@android:drawable/ic_menu_add"
                android:drawablePadding="8dp"
                style="@style/AppButton"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnEditFood"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="72dp"
                android:text="Sửa"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:drawablePadding="8dp"
                style="@style/AppButton"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDeleteFood"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="72dp"
                android:text="Xóa"
                android:drawableStart="@android:drawable/ic_menu_delete"
                android:drawablePadding="8dp"
                style="@style/AppButton"
                android:backgroundTint="@color/danger"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="72dp"
                android:text="Đóng"
                android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
                android:drawablePadding="8dp"
                style="@style/AppButton" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>