<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/surface">

    <!-- Ảnh xem trước (sử dụng URL từ etFoodImageUrl) -->
    <ImageView
        android:id="@+id/ivFoodImageAdd"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:contentDescription="Ảnh món ăn"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        android:background="@color/background" />

    <EditText
        android:id="@+id/etFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên món ăn"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFoodDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả ngắn"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etDetailedDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả chi tiết"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFoodPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá Small (VNĐ)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etMediumPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá Medium (VNĐ)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etLargePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá Large (VNĐ)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFoodSalePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá giảm (VNĐ)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFoodImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL ảnh"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFoodRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đánh giá (0-5)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <!-- Buttons grouped in one line like main task bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnSaveFood"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Lưu"
            android:drawableStart="@android:drawable/ic_menu_save"
            android:drawablePadding="8dp"
            style="@style/AppButton"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Hủy"
            android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
            android:drawablePadding="8dp"
            style="@style/AppButton"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>