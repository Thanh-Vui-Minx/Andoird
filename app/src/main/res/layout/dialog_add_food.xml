<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <EditText
        android:id="@+id/etFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên món ăn"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFoodDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả ngắn"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etDetailedDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả chi tiết"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFoodPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá Small (VNĐ)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etMediumPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá Medium (VNĐ)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etLargePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá Large (VNĐ)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFoodSalePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá giảm (VNĐ)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFoodImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL ảnh"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFoodRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đánh giá (0-5)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnSaveFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:layout_marginTop="8dp" />

</LinearLayout>