<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvOrderHistoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lịch sử đơn hàng"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="4dp" />

    <TextView
        android:id="@+id/tvEmptyOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn chưa có đơn hàng nào"
        android:textColor="@color/textSecondary"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginTop="12dp" />

    <!-- Bottom taskbar: moved top controls here for consistency -->
    <LinearLayout
        android:id="@+id/bottomTaskbarOrders"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:background="@color/surface"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/containerLeftOrders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btnBackOrderHistory"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Quay lại"
                style="@style/AppButton" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerRightOrders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btnRefreshOrders"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Làm mới"
                style="@style/AppButton" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
